{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/app-simple.py",
      "use": "@vercel/python",
      "config": {
        "requirements": "backend/requirements-vercel.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app-simple.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 